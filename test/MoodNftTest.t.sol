pragma solidity ^0.8.19;

import {Test, console} from "forge-std/Test.sol";
import {MoodNft} from "../src/MoodNft.sol";
import {DeployMoodNft} from "../script/DeployMoodNft.s.sol";

contract MoodNftTest is Test {
    string constant NFT_NAME = "Mood Nft";
    string constant NFT_SYMBOL = "MN";
    DeployMoodNft public deployer;
    MoodNft public moodNft;
    address USER = makeAddr("user");
    string public constant HAPPY_SVG_IMAGE_URI =
        "data:image/svg+xml;base64,";
    string public constant SAD_SVG_IMAGE_URI =
        "data:image/svg+xml;base64,";

    string public constant SAD_SVG_URI =
        "data:application/json;base64,";
    string public constant HAPPY_SVG_URI =
        "data:application/json;base64,";

    function setUp() public {
        deployer = new DeployMoodNft();
        moodNft = deployer.run();
    }

    function testViewTokenUri() public {
        vm.prank(USER);
        moodNft.mintNft();
    }

    function testInitializeNameAndSymbolCorrectly() public view {
        assert(
            keccak256(abi.encodePacked(moodNft.name())) ==
                keccak256(abi.encodePacked(NFT_NAME))
        );
        assert(
            keccak256(abi.encodePacked(moodNft.symbol())) ==
                keccak256(abi.encodePacked(NFT_SYMBOL))
        );
    }

    function testTokenURIDeafaultIsCorrectlySet() public {
        vm.prank(USER);
        moodNft.mintNft();
        assert(
            keccak256(abi.encodePacked(moodNft.tokenURI(0))) ==
                keccak256(abi.encodePacked(HAPPY_SVG_URI))
        );
    }

    function testCanMintAndHaveBalance() public {
        vm.prank(USER);
        moodNft.mintNft();

        assert(moodNft.balanceOf(USER) == 1);
    }

    function testFlipTokenToSad() public {
        vm.prank(USER);
        moodNft.mintNft();

        vm.prank(USER);
        moodNft.flipMood(0);

        assert(
            keccak256(abi.encodePacked(SAD_SVG_URI)) ==
                keccak256(abi.encodePacked(moodNft.tokenURI(0)))
        );
    }
}
